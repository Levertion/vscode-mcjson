{
    "name": "mcjson",
    "version": "0.0.1",
    "publisher": "Levertion",
    "engines": {
        "vscode": "^0.16.0"
    },
    "license": "MIT",
    "displayName": "Minecraft JSON Schemas",
    "description": "An extension to bring support for Minecraft JSON schemas into Visual Studio Code",
    "categories": [
        "Linters",
        "Other"
    ],
    "keywords": [
        "minecraft",
        "json",
        "schema"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "**/advancements/**/*.json",
                "url": "./minecraft-json-schemas/advancement_strict.json"
            },
            {
                "fileMatch": "pack.mcmeta",
                "url": "./minecraft-json-schemas/pack.mcmeta.json"
            },
            {
                "fileMatch": "**/loot_tables/**/*.json",
                "url": "./minecraft-json-schemas/loot_table_strict.json"
            },
            {
                "fileMatch": "*.png.mcmeta",
                "url": "./minecraft-json-schemas/animation.mcmeta.json"
            }
        ]
    },
    "bugs": {
        "url": "https://github.com/Levertion/vscode-mcjson/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Levertion/vscode-mcjson.git"
    },
    "homepage": "https://levertion.github.io",
    "galleryBanner": {
        "theme": "dark",
        "color": "#007C00"
    },
    "icon": "./icon.png",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}